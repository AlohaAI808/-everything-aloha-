---
interface Resource {
  title: string;
  description: string;
  link: string;
  category: string;
  image: string;
}

interface Props {
  title: string;
  description: string;
  resources: Resource[];
}

const { title, description, resources } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">{title}</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">{description}</p>
    </div>
    
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {resources.map(resource => (
        <a 
          href={resource.link}
          class="group bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-102 transition-all duration-300"
        >
          <div class="relative h-48">
            <img 
              src={resource.image} 
              alt={resource.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <span class="absolute bottom-4 left-4 px-4 py-2 bg-blue-600/90 text-white text-sm rounded-full backdrop-blur-sm">
              {resource.category}
            </span>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 group-hover:text-blue-600 transition-colors">
              {resource.title}
            </h3>
            <p class="text-gray-600">{resource.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>