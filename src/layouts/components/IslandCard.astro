---
// IslandCard.astro - Basic island card component
export interface Props {
  name: string;
  image: string;
  description: string;
  link: string;
}

const { name, image, description, link } = Astro.props;
---

<div class="island-card">
  <img src={image} alt={name} />
  <div class="card-content">
    <h3>{name}</h3>
    <p>{description}</p>
    <a href={link} class="cta-button">Explore {name}</a>
  </div>
</div>

<style>
  .island-card {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }
  
  .island-card:hover {
    transform: translateY(-4px);
  }
  
  .island-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card-content h3 {
    margin: 0 0 0.5rem 0;
    color: #1e40af;
  }
  
  .card-content p {
    margin: 0 0 1rem 0;
    color: #6b7280;
  }
  
  .cta-button {
    background: #10b981;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    display: inline-block;
    transition: background 0.3s ease;
  }
  
  .cta-button:hover {
    background: #059669;
  }
</style>
