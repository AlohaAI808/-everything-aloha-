---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Newsletter from '../components/Newsletter.astro';

const smartTips = [
  {
    title: "Off-Season Travel",
    description: "Experience luxury for less by visiting during shoulder seasons.",
    tips: [
      "Book between April-May or September-October",
      "Save up to 40% on luxury accommodations",
      "Enjoy better availability at top restaurants",
      "Experience fewer crowds at premium locations"
    ]
  },
  {
    title: "Luxury Hotel Hacks",
    description: "Stay at world-class hotels without the premium price tag.",
    tips: [
      "Book luxury hotels mid-week for better rates",
      "Use credit card points for premium rooms",
      "Look for package deals with included amenities",
      "Consider club level rooms for added value"
    ]
  },
  {
    title: "Premium Experiences",
    description: "Access exclusive experiences at better prices.",
    tips: [
      "Book activities during sunset hours for better rates",
      "Share private tours with other couples",
      "Use local luxury concierge services",
      "Look for seasonal activity packages"
    ]
  }
];
---

<Layout 
  title="Smart Luxury Tips | Everything Aloha"
  description="Discover how to experience Hawaiian luxury on a budget with our expert tips and strategies."
>
  <Header />
  
  <main class="pt-24 pb-16">
    <div class="relative h-[60vh] min-h-[400px] mb-12">
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style="background-image: url('https://images.unsplash.com/photo-1507876466758-bc54f384809c?auto=format&fit=crop&w=2000&q=80')"
      >
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-black/20"></div>
      </div>
      <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Smart Luxury Travel
          </h1>
          <p class="text-xl text-white/90">
            Experience the best of Hawaii without breaking the bank. Our expert tips help you enjoy luxury experiences for less.
          </p>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4">
      <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3">
        {smartTips.map(tip => (
          <div class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300">
            <h3 class="text-2xl font-bold mb-2 text-blue-900">{tip.title}</h3>
            <p class="text-gray-600 mb-6">{tip.description}</p>
            
            <div class="mb-6">
              <h4 class="text-sm font-semibold text-amber-600 mb-4">Smart Tips:</h4>
              <ul class="space-y-3">
                {tip.tips.map(item => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-amber-500 mr-2 mt-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"/>
                    </svg>
                    <span class="text-sm text-gray-600">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 max-w-3xl mx-auto text-center">
        <a 
          href="/contact"
          class="inline-block px-8 py-4 bg-gradient-to-r from-amber-600 to-amber-700 text-white rounded-full font-semibold hover:from-amber-700 hover:to-amber-800 transition-all duration-300 transform hover:scale-105"
        >
          Get Personalized Tips
        </a>
      </div>
    </div>
  </main>

  <Newsletter />
</Layout>