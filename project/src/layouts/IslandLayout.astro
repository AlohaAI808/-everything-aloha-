---
import PageLayout from './PageLayout.astro';
import type { MetaProps } from '../types/seo';

interface Props extends MetaProps {
  heroImage: string;
  heroTitle: string;
  heroSubtitle: string;
}

const { heroImage, heroTitle, heroSubtitle, ...rest } = Astro.props;
---

<PageLayout {...rest}>
  <div class="relative min-h-[70vh] overflow-hidden">
    <div 
      class="absolute inset-0 bg-cover bg-center bg-no-repeat transform transition-all duration-1000 hover:scale-105"
      style={`background-image: url('${heroImage}');`}
    >
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-transparent"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_transparent_0%,_rgba(0,0,0,0.4)_100%)]"></div>
    </div>
    
    <div class="relative h-full min-h-[70vh] flex flex-col items-center justify-center text-center px-4">
      <div class="text-white max-w-4xl mx-auto transform transition-all duration-700 hover:scale-105">
        <h1 
          class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-2xl bg-clip-text text-transparent bg-gradient-to-r from-white to-blue-100"
        >
          {heroTitle}
        </h1>
        <p class="text-xl md:text-2xl max-w-2xl mx-auto drop-shadow-xl leading-relaxed bg-black/20 backdrop-blur-sm rounded-lg p-6">
          {heroSubtitle}
        </p>
      </div>
    </div>
  </div>
  
  <main class="relative -mt-20">
    <div class="container mx-auto px-4 py-16">
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:shadow-3xl transition-all duration-300">
        <slot />
      </div>
    </div>
  </main>
</PageLayout>