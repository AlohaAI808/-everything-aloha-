---
import OptimizedImage from './common/OptimizedImage.astro';

interface Props {
  name: string;
  image: string;
  description: string;
  href: string;
  luxuryHighlights: string[];
}

const { name, image, description, href, luxuryHighlights } = Astro.props;
---

<div class="group relative transform transition-all duration-300 hover:scale-105 hover:rotate-1">
  <div class="bg-white rounded-xl shadow-2xl overflow-hidden transform transition-all duration-500 hover:shadow-3xl">
    <div class="relative h-64 overflow-hidden bg-blue-100">
      <OptimizedImage 
        src={image} 
        alt={`${name} luxury experiences`} 
        class="w-full h-full object-cover transform transition-all duration-700 group-hover:scale-110"
        width={800}
        height={600}
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      <div class="absolute top-4 right-4">
        <span class="inline-block px-3 py-1 bg-amber-600/90 text-white text-sm rounded-full backdrop-blur-sm">
          Luxury Destination
        </span>
      </div>
    </div>
    <div class="p-6 relative z-10">
      <h3 class="text-2xl font-bold mb-2 text-blue-900 group-hover:text-amber-600 transition-colors duration-300">{name}</h3>
      <p class="text-gray-600 mb-4 line-clamp-2">{description}</p>
      
      <div class="mb-4">
        <h4 class="text-sm font-semibold text-amber-600 mb-2">Luxury Highlights:</h4>
        <ul class="space-y-1">
          {luxuryHighlights.map(highlight => (
            <li class="text-sm text-gray-600 flex items-center">
              <svg class="w-4 h-4 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              {highlight}
            </li>
          ))}
        </ul>
      </div>
      
      <a 
        href={href}
        class="inline-block w-full px-6 py-3 bg-gradient-to-r from-amber-600 to-amber-700 text-white text-center rounded-full font-semibold hover:from-amber-700 hover:to-amber-800 transition-all duration-300 transform hover:scale-105"
      >
        Explore Luxury Experiences
      </a>
    </div>
  </div>
</div>