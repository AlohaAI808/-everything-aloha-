---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Newsletter from '../components/Newsletter.astro';

const islands = [
  { value: 'oahu', label: 'Oahu' },
  { value: 'maui', label: 'Maui' },
  { value: 'kauai', label: 'Kauai' },
  { value: 'big-island', label: 'Big Island' },
  { value: 'lanai', label: 'Lanai' },
  { value: 'molokai', label: 'Molokai' }
];

const travelStyles = [
  { value: 'relaxation', label: 'Relaxation and leisure' },
  { value: 'adventure', label: 'Adventure and activities' },
  { value: 'culture', label: 'Culture and history' },
  { value: 'family', label: 'Family-friendly' },
  { value: 'romantic', label: 'Romantic getaway' },
  { value: 'luxury', label: 'Luxury experience' },
  { value: 'budget', label: 'Budget-friendly' }
];

const planningOptions = [
  { value: 'single-day', label: 'Single-day itinerary ($50)', price: 50 },
  { value: 'multi-day', label: 'Multi-day vacation planning ($200+)', price: 200 }
];
---

<Layout 
  title="Hawaii Vacation Planner â€“ Your Personalized Itinerary"
  description="Let me create your perfect Hawaiian vacation itinerary! Custom travel planning tailored to your interests, style, and budget."
>
  <Header />
  
  <main class="pt-24 pb-16">
    <!-- Hero Section -->
    <div class="relative h-[50vh] min-h-[400px] mb-12">
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style="background-image: url('https://images.unsplash.com/photo-1542259009477-d625272157b7?auto=format&fit=crop&w=2000&q=80')"
      >
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-black/20"></div>
      </div>
      <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Let Me Plan Your Dream Hawaiian Adventure!
          </h1>
          <p class="text-xl text-white/90">
            Planning your perfect Hawaiian getaway just got easier! Let me create a custom itinerary 
            tailored to your interests, budget, and travel style. Whether it's a single day or an 
            entire vacation, I'll handle the details so you can focus on making memories.
          </p>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4">
      <!-- Features Section -->
      <section class="mb-16">
        <div class="grid gap-8 md:grid-cols-3">
          <div class="bg-white rounded-xl shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Personalized Itineraries</h3>
            <p class="text-gray-600">Custom travel plans tailored to your unique preferences and style</p>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Insider Recommendations</h3>
            <p class="text-gray-600">Access to local secrets and hidden gems across the islands</p>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Affordable Planning</h3>
            <p class="text-gray-600">Professional planning services starting at just $50</p>
          </div>
        </div>
      </section>

      <!-- Form Section -->
      <section class="max-w-3xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h2 class="text-3xl font-bold text-center mb-8">Request Your Personalized Plan</h2>
          
          <form 
            name="vacation-planner"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-6"
          >
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="bot-field" />
              </label>
            </p>

            <div class="grid gap-6 md:grid-cols-2">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Name *
                </label>
                <input
                  type="text"
                  name="name"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Email *
                </label>
                <input
                  type="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Phone Number (Optional)
              </label>
              <input
                type="tel"
                name="phone"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
              />
            </div>

            <div class="grid gap-6 md:grid-cols-2">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Travel Dates *
                </label>
                <input
                  type="date"
                  name="travel_dates"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Number of Travelers
                </label>
                <input
                  type="number"
                  name="travelers"
                  min="1"
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Islands You're Visiting *
              </label>
              <div class="grid gap-2 md:grid-cols-3">
                {islands.map(island => (
                  <label class="flex items-center space-x-2">
                    <input
                      type="checkbox"
                      name="islands"
                      value={island.value}
                      class="rounded text-blue-600 focus:ring-blue-500"
                    />
                    <span>{island.label}</span>
                  </label>
                ))}
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Travel Style *
              </label>
              <select
                name="travel_style"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
              >
                <option value="">Select your travel style</option>
                {travelStyles.map(style => (
                  <option value={style.value}>{style.label}</option>
                ))}
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Planning Service *
              </label>
              <select
                name="planning_option"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
              >
                <option value="">Select your planning option</option>
                {planningOptions.map(option => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Special Interests or Activities
              </label>
              <textarea
                name="interests"
                rows="4"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                placeholder="Tell me about any specific activities or experiences you're interested in..."
              ></textarea>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Additional Notes or Special Requests
              </label>
              <textarea
                name="notes"
                rows="4"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
                placeholder="Any other details you'd like me to know..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
            >
              Submit Request
            </button>
          </form>
        </div>
      </section>

      <!-- Contact Info -->
      <section class="mt-12 text-center">
        <p class="text-gray-600">
          Questions? Email me at{' '}
          <a 
            href="mailto:info@gatewaytoaloha.com"
            class="text-blue-600 hover:text-blue-700"
          >
            info@gatewaytoaloha.com
          </a>
        </p>
      </section>
    </div>
  </main>

  <Newsletter />
</Layout>

<script>
  // Form submission handling
  const form = document.querySelector('form[name="vacation-planner"]');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const button = form.querySelector('button[type="submit"]');
    
    if (button) {
      button.disabled = true;
      button.innerHTML = `
        <svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      `;
    }

    try {
      const response = await fetch('/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams(formData as any).toString()
      });

      if (!response.ok) {
        throw new Error('Form submission failed');
      }

      // Show success message
      const formContainer = form.parentElement;
      if (formContainer) {
        formContainer.innerHTML = `
          <div class="text-center py-8">
            <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Thank You!</h3>
            <p class="text-gray-600 mb-6">
              I've received your request and will be in touch soon to discuss your personalized plan.
            </p>
            <p class="text-sm text-gray-500">
              Check your email for a confirmation message.
            </p>
          </div>
        `;
      }
    } catch (error) {
      alert('Sorry, there was an error submitting your request. Please try again or email me directly.');
      if (button) {
        button.disabled = false;
        button.textContent = 'Submit Request';
      }
    }
  });
</script>