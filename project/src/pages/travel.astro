---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import TravelSearch from '../components/TravelSearch.astro';
import Newsletter from '../components/Newsletter.astro';

const destinations = [
  {
    name: "Maui",
    image: "https://images.unsplash.com/photo-1542259009477-d625272157b7?auto=format&fit=crop&w=800&q=80",
    airports: ["OGG - Kahului", "JHM - Kapalua", "HNM - Hana"]
  },
  {
    name: "Oahu",
    image: "https://images.unsplash.com/photo-1507876466758-bc54f384809c?auto=format&fit=crop&w=800&q=80",
    airports: ["HNL - Daniel K. Inouye Intl"]
  },
  {
    name: "Kauai",
    image: "https://images.unsplash.com/photo-1505852679233-d9fd70aff56d?auto=format&fit=crop&w=800&q=80",
    airports: ["LIH - Lihue"]
  }
];
---

<Layout title="Book Your Hawaiian Vacation | Everything Aloha">
  <Header />
  
  <main class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Plan Your Hawaiian Adventure</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Find the best deals on flights, hotels, and rental cars for your perfect Hawaiian vacation.
        </p>
      </div>

      <div class="max-w-4xl mx-auto mb-16">
        <TravelSearch />
      </div>

      <section class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-8">Popular Destinations</h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {destinations.map(dest => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="relative h-48">
                <img 
                  src={dest.image} 
                  alt={dest.name}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <h3 class="absolute bottom-4 left-4 text-2xl font-bold text-white">
                  {dest.name}
                </h3>
              </div>
              <div class="p-6">
                <h4 class="font-semibold mb-2">Major Airports:</h4>
                <ul class="space-y-1 text-gray-600">
                  {dest.airports.map(airport => (
                    <li>{airport}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="bg-blue-50 rounded-2xl p-8 md:p-12">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4">Travel Tips</h2>
          <ul class="text-left space-y-4 mb-8">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-blue-600 mr-2 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Book flights 3-6 months in advance for the best deals
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-blue-600 mr-2 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Consider island hopping to experience more of Hawaii
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-blue-600 mr-2 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Rent a car to explore the islands at your own pace
            </li>
          </ul>
        </div>
      </section>
    </div>
  </main>

  <Newsletter />
</Layout>