---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Newsletter from '../components/Newsletter.astro';

const luxuryExperiences = [
  {
    title: "Private Island Tours",
    image: "https://images.unsplash.com/photo-1542259009477-d625272157b7?auto=format&fit=crop&w=1200&q=80",
    description: "Experience Hawaii in ultimate privacy with exclusive helicopter and yacht tours.",
    price: "From $2,500",
    features: [
      "Private helicopter tours",
      "Luxury yacht charters",
      "Personal concierge",
      "Gourmet catering"
    ]
  },
  {
    title: "Five-Star Resorts",
    image: "https://images.unsplash.com/photo-1507876466758-bc54f384809c?auto=format&fit=crop&w=1200&q=80",
    description: "Stay at Hawaii's most prestigious resorts with VIP amenities and services.",
    price: "From $1,200/night",
    features: [
      "Ocean-view suites",
      "Private butler service",
      "Exclusive spa access",
      "Fine dining experiences"
    ]
  },
  {
    title: "Exclusive Adventures",
    image: "https://images.unsplash.com/photo-1505852679233-d9fd70aff56d?auto=format&fit=crop&w=1200&q=80",
    description: "Curated adventure experiences with expert guides and luxury amenities.",
    price: "From $1,500",
    features: [
      "Private hiking tours",
      "Exclusive snorkeling spots",
      "Photography sessions",
      "Luxury transportation"
    ]
  }
];
---

<Layout 
  title="Luxury Experiences | Everything Aloha"
  description="Discover exclusive luxury experiences across the Hawaiian Islands. From private tours to five-star resorts."
>
  <Header />
  
  <main class="pt-24 pb-16">
    <div class="relative h-[60vh] min-h-[400px] mb-12">
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style="background-image: url('https://images.unsplash.com/photo-1542259009477-d625272157b7?auto=format&fit=crop&w=2000&q=80')"
      >
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-black/20"></div>
      </div>
      <div class="relative container mx-auto px-4 h-full flex items-center">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Luxury Hawaiian Experiences
          </h1>
          <p class="text-xl text-white/90">
            Discover the finest experiences Hawaii has to offer, curated for the discerning traveler.
          </p>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4">
      <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3">
        {luxuryExperiences.map(exp => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="relative h-64">
              <img 
                src={exp.image} 
                alt={exp.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute top-4 right-4">
                <span class="px-4 py-2 bg-amber-600/90 text-white text-sm rounded-full backdrop-blur-sm">
                  {exp.price}
                </span>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-2 text-blue-900">{exp.title}</h3>
              <p class="text-gray-600 mb-4">{exp.description}</p>
              
              <div class="mb-6">
                <h4 class="text-sm font-semibold text-amber-600 mb-2">Included Features:</h4>
                <ul class="space-y-2">
                  {exp.features.map(feature => (
                    <li class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
              
              <a 
                href="/contact"
                class="inline-block w-full px-6 py-3 bg-gradient-to-r from-amber-600 to-amber-700 text-white text-center rounded-full font-semibold hover:from-amber-700 hover:to-amber-800 transition-all duration-300"
              >
                Inquire Now
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>

  <Newsletter />
</Layout>