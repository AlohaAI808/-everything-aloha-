---
interface Testimonial {
  name: string;
  location: string;
  content: string;
  image: string;
  rating: number;
  date: string;
}

const testimonials: Testimonial[] = [
  {
    name: "Sarah Johnson",
    location: "California",
    content: "Everything Aloha made planning our Maui vacation so easy! Their detailed guides and local tips helped us discover hidden gems we would have never found on our own.",
    image: "https://images.unsplash.com/photo-1542259009477-d625272157b7?auto=format&fit=crop&w=150&q=80",
    rating: 5,
    date: "March 2024"
  },
  {
    name: "Mike Chen",
    location: "New York",
    content: "The island guides were incredibly detailed and accurate. We followed their recommendations for restaurants and activities on Kauai, and every suggestion was spot-on!",
    image: "https://images.unsplash.com/photo-1507876466758-bc54f384809c?auto=format&fit=crop&w=150&q=80",
    rating: 5,
    date: "February 2024"
  },
  {
    name: "Emily Rodriguez",
    location: "Texas",
    content: "Thanks to Everything Aloha's travel tips, we saved money on flights and activities. Their insider knowledge of Hawaii is invaluable for any traveler.",
    image: "https://images.unsplash.com/photo-1505852679233-d9fd70aff56d?auto=format&fit=crop&w=150&q=80",
    rating: 5,
    date: "January 2024"
  }
];
---

<section class="py-12 bg-gradient-to-b from-white to-blue-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">What Visitors Say</h2>
    
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {testimonials.map(testimonial => (
        <div class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-102 transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="flex text-yellow-400">
              {Array(5).fill(null).map((_, i) => (
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class={`h-5 w-5 ${i < testimonial.rating ? 'fill-current' : 'fill-gray-300'}`}
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="ml-2 text-sm text-gray-500">{testimonial.date}</span>
          </div>
          
          <blockquote class="mb-4">
            <p class="text-gray-600 italic">"{testimonial.content}"</p>
          </blockquote>
          
          <div class="flex items-center">
            <img 
              src={testimonial.image} 
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover mr-4"
            />
            <div>
              <div class="font-semibold">{testimonial.name}</div>
              <div class="text-sm text-gray-500">{testimonial.location}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>